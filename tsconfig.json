{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2020",
        "moduleResolution": "node",
        "target": "ES2021",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strictNullChecks": false
    },
    "include": [
        "./src/**/*"
    ]
}
